<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/coupleback"
    tools:context=".Message">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:backgroundTint="@color/trans"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="70dp"
            android:textColor="@color/blue"
            android:layout_margin="20dp"
            android:fontFamily="cursive"
            android:text="Happy Valentine's Day" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:textSize="40dp"
        android:height="20dp"
        android:textColor="@color/pink_500"
        android:fontFamily="cursive"
        android:layout_weight="1"
        android:text="I Love you almost as much I love myself" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/pink_200"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:text="(Not really but still you are pretty)" />
</LinearLayout>